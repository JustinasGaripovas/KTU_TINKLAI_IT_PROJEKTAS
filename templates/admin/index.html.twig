{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

    <div class="container">

        <div class="content py-5">
            <h1 class="text-center">Registered doctor list</h1>

            <a href="{{ path('employee_registration') }}">New doctor</a>
            
            <table class="table mt-4">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>

                {% for doctor in doctors %}
                    <tr>
                        <td>{{ doctor.id }}</td>
                        <td>{{ doctor.username }}</td>
                        <td>{{ doctor.email }}</td>
                        <td>{{ doctor.phone }}</td>
                        <td><a class="btn" href="{{ path('admin_edit_schedule', {"id": doctor.id}) }}">+</a></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

    </div>

{% endblock %}
